<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.techtown.shoppingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/s_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/s_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity
            android:name=".MyShipmentInfoActivity"
            android:exported="false" />
        <activity
            android:name=".FindPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".FindEmailActivity"
            android:exported="false" />
        <activity
            android:name=".ShipmentActivity"
            android:exported="false" />
        <activity
            android:name=".EditReviewActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterReviewActivity"
            android:exported="false" />
        <activity
            android:name=".MyOrderActivity"
            android:exported="false" />
        <activity
            android:name=".MyReviewActivity"
            android:exported="false" />
        <activity
            android:name=".PaymentActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="iamportsdkapp" />
            </intent-filter>


        </activity>
        <activity
            android:name=".MyInfoDetailActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name=".MyInfoActivity"
            android:exported="false" />
        <activity
            android:name=".CartActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>