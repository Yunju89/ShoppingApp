<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MyShipmentAddDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="신규 배송지 입력"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnExit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/exit_icon" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/light_gray_border_box"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:hint="받는사람"
            android:textColorHint="@color/light_gray_text"/>

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/light_gray_border_box"
            android:hint="휴대폰번호 입력"
            android:inputType="phone"
            android:textColorHint="@color/light_gray_text"
            android:textSize="17sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnFindAddress"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:gravity="center"
                android:text="주소 찾기"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:background="@drawable/gray_border_box"/>

            <TextView
                android:id="@+id/txtZipcode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:paddingHorizontal="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/light_gray_border_box"
                android:hint="우편번호"
                android:textColorHint="@color/light_gray_text"
                android:textSize="17sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtAddress1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/light_gray_border_box"
            android:hint="기본주소"
            android:textColorHint="@color/light_gray_text"
            android:textSize="17sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/txtAddress2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/light_gray_border_box"
            android:hint="상세주소 및 건물명"
            android:textColorHint="@color/light_gray_text"
            android:textSize="17sp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkedBasicAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="기본배송지로 설정"
            android:buttonTint="@color/black"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btnSaveAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="배송지 입력"
            android:background="@drawable/gray_border_box"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>



</LinearLayout>
</layout>