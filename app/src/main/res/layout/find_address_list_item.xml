<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtZip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="(우)"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/txtZipCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txtZip"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:textColor="@color/blue"
        tools:text="07770"/>

    <TextView
        android:id="@+id/txtLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtZip"
        app:layout_constraintStart_toStartOf="parent"
        android:text="[도로명]"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtLoadAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/txtLoad"
        app:layout_constraintTop_toBottomOf="@+id/txtZip"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        tools:text="서울특별시 강서구  강서로 26길 35-27 "/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/txtLoad"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/txtAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        android:text="[지번]"
        android:textColor="@color/black"/>



    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/txtLoad"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        tools:text="서울특별시 화곡동 105-21 "/>

